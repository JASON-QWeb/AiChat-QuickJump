{
  "manifest_version": 3,
  "name": "AI Chat Prompt Navigator",
  "version": "1.2.2",
  "description": "AI 对话快捷导航助手。支持 ChatGPT、Claude、Gemini、DeepSeek，提供快捷键跳转、侧边时间线导航和重点对话标记功能。",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background/index.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://chat.deepseek.com/*"
      ],
      "js": [
        "content/index.js"
      ]
    }
  ],
  "commands": {
    "prev-answer": {
      "suggested_key": {
        "default": "Alt+W",
        "mac": "Alt+W"
      },
      "description": "Go to previous answer"
    },
    "next-answer": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Go to next answer"
    },
    "toggle-ui": {
      "suggested_key": {
        "default": "Alt+D",
        "mac": "Alt+D"
      },
      "description": "Toggle Navigation UI"
    },
    "toggle-pin": {
      "suggested_key": {
        "default": "Alt+A",
        "mac": "Alt+A"
      },
      "description": "Toggle Pin for current answer"
    }
  },
  "options_page": "options/index.html",
  "action": {
    "default_popup": "popup/index.html"
  }
}
